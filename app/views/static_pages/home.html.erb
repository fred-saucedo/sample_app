<%provide(:title, 'Home') %>
<% if signed_in? %>
	<div class = "row" >
		<aside class = "span4" >
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/micropost_form'%>
			</section>
		</aside>
		<div class="span8">
			<h3>
				Wine Feed
			</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<%else %>
<div class = "center hero-unit" style=" background: rgba(0,0,0,0.5);">
  <h1>Welcome to BottleFly</h1>
  <h2>
    We are working hard to bring you the best tasting experince
  </h2>
  <div id ="countdown">
  </div>
  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<% end %>

