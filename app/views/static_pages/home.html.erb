<%provide(:title, 'Home') %>
<% if signed_in? %>
	<div class = "row" >
		<aside class = "span4" >
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
			<section>
				<%= render 'shared/micropost_form'%>
			</section>
		</aside>
		<div class="span8">
			<h3>
				Wine Feed
			</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<%else %>
<div class = "center hero-unit" style=" background-image: url(<%= asset_path 'cool_sun.jpg'%>);">
  <h1>Welcome to BottleFly.</h1>
  <p>
    We are working hard to bring you the best tasting experince
  </p>
  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<% end %>

